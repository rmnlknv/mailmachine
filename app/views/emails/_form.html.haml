= form_for [@mail_set, @email] do |f| 
  = if @mail_set.errors.any?
    = @mail_set.errors.full_messages.each do |message|
      %li= message
  %p
    = f.label :title, 'Mail title'
    = f.text_field :title
  %p
    = f.label :body, 'Mail body'
    = f.text_area :body
  %p Attachments:
  %p
    = f.fields_for :attachments do |a|
      = a.label :file
      = a.file_field :file

  = f.submit @email.new_record? ? "Create mail" : "Update mail"
